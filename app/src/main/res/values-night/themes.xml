<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nhlapp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/AppBottomMenu</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="android:fontFamily">@font/overpass_mono_bold</item>
    </style>

    <style name="AppTheme.Secondary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/overpass_mono_light</item>
    </style>
</resources>