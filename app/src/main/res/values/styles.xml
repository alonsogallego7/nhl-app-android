<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="SectionToolbar" parent="AppToolbar">
        <item name="titleCentered">true</item>
    </style>

    <style name="AppBottomMenu" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/black</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemIconSize">32dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white_transparent</item>
    </style>
</resources>